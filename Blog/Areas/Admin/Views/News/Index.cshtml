@model List<News>

<div class="card">
    <div class="card-header">
        <h5 class="card-title text-center">Lista de Post's</h5>
    </div>
    <div class="card-body">

        <table class="table text-center">
            <thead>
                <tr>
                    <th scope="col">Título</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var news in Model)
                {
                    <tr>
                        <th scope="row">@news.Title</th>
                        <td>@news.Description</td>
                        <td><a asp-area="Admin" asp-controller="News" asp-action="Update" asp-route-id="@news.Id" type="button" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i></a></td>
                        
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#a@(news.Id.ToString())">
                                <i class="bi bi-trash"></i>
                            </button>
                            
                        </td>
                    </tr>
                    <!-- Modal -->
                    <div class="modal fade" id="a@(news.Id.ToString())" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Atenção</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Deseja mesmo excluir o post<b> @news.Title.ToString()</b>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                    <a asp-area="Admin" asp-controller="News" asp-action="Delete" asp-route-id="@news.Id" class="btn btn-danger">Excluir</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>

    </div>
</div>

