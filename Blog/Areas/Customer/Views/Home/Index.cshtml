@model List<News>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Post's</h5>
    </div>
    <div class="card-body">
        @foreach(var news in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="@news.PathImage" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">@news.Description</p>
                </div>
            </div>
        }
    </div>
</div>